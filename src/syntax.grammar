@top Program { value* }

@skip { whitespace | Comment }

@precedence {
  label
}

value {
  Label | expression
}

expression {
  logical | null | Word | Symbol | Integer | Floating
}

Symbol { "<=" | "=>" | "<=>" | "<<=" | "=>>" | "<<=>>" | "<-" | "->" | "<->" | "<<-" | "->>" | "<<->>" | "-<" | ">-" | ">-<" | "-<<" | ">>-" | ">>-<<" | "<<" | ">>" | "<<<" | ">>>" | "<--" | "-->" | "<-->" | "<==" | "==>" | "<==>" | "<~" | "~>" | "<~>" | "|>" | "<|" | "<|>" | "=<" | ">=" | "<>" | "<:" | "-:" | ">:" | "~" | "!" | "!!" | "?" | "??" | "@" | "#" | "##" | "###" | "####" | "#####" | "######" | "$" | "%" | "^" | "&" | "*" | "**" | "-" | "--" | "=" | "==" | "=~" | "+" | "++" | "<" | ">" | "/" | "/%" | "//" | "\\" | "\\\\" | "|" | "|-" | "|=" | ".." | "..." | "./" | ":" | "::" | ":=" | "||" | "∅" | "∞" | "∑" | "∏" | "∩" | "∪" | "⊂" | "⊃" | "⊆" | "⊇" | "∈" | "∉" | "∧" | "∨" | "⊻" | "⊼" | "¬" }

Label { Word !label ":" expression }

null { kw<"null"> }
logical { kwn<"true" | "false" | "maybe", Logical> }

Word { identifier }

kw<term> { kwn<term, term> }
kwn<term, name> { @specialize[@name={name}]<identifier, term> }

@tokens { 
  whitespace { std.whitespace+ }

  Comment { ";" ![\n]* } 

  Integer { std.digit+ }
  Floating { std.digit+ "." std.digit+ }
  @precedence { Floating, Integer }

  identifierChar { std.asciiLetter | "_" }
  identifier { identifierChar (identifierChar | std.digit | "?")* }

  @precedence { identifier, whitespace }  
}

@detectDelim


